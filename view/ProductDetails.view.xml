<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.ui.layout.form"
        xmlns:l="sap.ui.layout"
        controllerName="vsevolod.tugay.controller.ProductDetails">

    <Page title="Product details"
          showNavButton="true"
          navButtonPress="onNavBack">
        <ObjectHeader
                title="{odata>name}"
                backgroundDesign="Solid"
                number="{
                       path: 'odata>totalPrice',
                       type: 'sap.ui.model.type.Float',
					   formatOptions: {
					   	decimals: 2
					   }}"
                numberUnit="{odata>currency}">
            <attributes>
                <ObjectAttribute text="Quantity: {odata>quantity}, price: {odata>price}" />
            </attributes>
        </ObjectHeader>
        <f:SimpleForm
                layout="ResponsiveGridLayout"
                editable="true">
            <Label text="Author name">
                <layoutData>
                    <l:GridData span="L1 M1" />
                </layoutData>
            </Label>
            <Input value="{commentValuesModel>/author}" editable="true">
                <layoutData>
                    <l:GridData span="L2 M2" />
                </layoutData>
            </Input>
            <Label text="Rating">
                <layoutData>
                    <l:GridData span="L1 M1" />
                </layoutData>
            </Label>
            <RatingIndicator value="{commentValuesModel>/rating}">
                <layoutData>
                    <l:GridData span="L1 M1" />
                </layoutData>
            </RatingIndicator>
        </f:SimpleForm>
        <FeedInput value="{commentValuesModel>/comment}" post="onPostComment"/>
        <List
                id="idCommentsList"
                showSeparators="Inner"
                items="{
                     path: 'odata>comments',
                     sorter: {
                        path: 'createdDate',
                        descending: true
                     }
                  }">
            <FeedListItem
                    sender="{odata>author}"
                    info="Rating: {odata>rating}"
                    text="{odata>comment}"/>
        </List>
    </Page>

</mvc:View>