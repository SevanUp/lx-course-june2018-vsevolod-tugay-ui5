<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	controllerName="vsevolod.tugay.controller.OrdersOverview">

	<Page title="Orders overview">
		<IconTabBar
				id="idIconTabBar"
				select="onIconTabFilterSelect"
				class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter
						showAll="true"
						text="All orders"
						count="{countsModel>/allCount}"
						key="all">
				</IconTabFilter>
				<IconTabSeparator />
				<IconTabFilter
						icon="sap-icon://pending"
						iconColor="Negative"
						text="Pending"
						count="{countsModel>/pendingCount}"
						key="pending">
				</IconTabFilter>
				<IconTabFilter
						icon="sap-icon://accept"
						iconColor="Positive"
						text="Accepted"
						count="{countsModel>/acceptedCount}"
						key="accepted">
				</IconTabFilter>
			</items>
			<content>
				<Table class="sapUiResponsiveMargin"
					   id="OrdersTable"
					   width="auto"
					   mode="Delete"
					   items="{odata>/Orders}"
					   itemPress="onSingleOrderPress"
					   delete="onSingleOrderDelete"
					   includeItemInSelection="true"
				>
					<headerToolbar>
						<Toolbar>
							<ToolbarSpacer />
							<Button
									icon="sap-icon://add"
									press="onAddOrderFormPress"
							/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<header>
								<Text text="ID" />
							</header>
						</Column>

						<Column>
							<header>
								<Text text="Customer" />
							</header>
						</Column>

						<Column minScreenWidth="450px" demandPopin="true">
							<header>
								<Text text="Created at" />
							</header>
						</Column>

						<Column minScreenWidth="450px" demandPopin="true">
							<header>
								<Text text="Shipped at" />
							</header>
						</Column>

						<Column minScreenWidth="550px" demandPopin="true">
							<header>
								<Text text="Status" />
							</header>
						</Column>

						<Column hAlign="End" minScreenWidth="650px" demandPopin="true">
							<header>
								<Text text="Total price" />
							</header>
						</Column>

						<Column minScreenWidth="700px" demandPopin="true">
							<header>
								<Text text="Ship country" />
							</header>
						</Column>
					</columns>

					<items>
						<ColumnListItem type="Navigation">
							<Text text="{odata>id}" />
							<Text text="{odata>summary/customer}" />
							<Text text="{
											path:'odata>summary/createdAt',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												source: {
      											  pattern: 'yyyy-MM-ddTHH:mm:ss.sssZ'
      											}
											}}" />
							<Text text="{
											path:'odata>summary/shippedAt',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												source: {
      											  pattern: 'yyyy-MM-ddTHH:mm:ss.sssZ'
      											}
											}}" />
							<Text text="{= ${odata>summary/status}.charAt(0).toUpperCase() + ${odata>summary/status}.slice(1)}" />
							<Text text="{odata>summary/totalPrice} {odata>summary/currency}" />
							<Text text="{odata>shipTo/country}" />
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</IconTabBar>

	</Page>

</mvc:View>